---
import Layout from "@layouts/Layout.astro";
import Footer from "@components/Footer.astro";
import { homepage } from "@content/homepage";
import Features from "@components/Features.astro";
---

<Layout>
  <section class="grid py-10 place-items-center text-center">
    <h1 class="sm:text-4xl text-3xl font-bold mb-6 dark:text-white">Petersen-Hanson Familienrestaurants&nbsp;KG</h1>
    <p>Geschäftsführerin: Frauke Petersen&#8209;Hanson</p>
    <p>Franchise-Nehmerin der McDonald's Deutschland LLC</p>
</section>
  {homepage.map((homepage) => <Features title={homepage.title} icon={homepage.icon} content={homepage.content} />)}
  <Footer />
</Layout>
